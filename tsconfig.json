{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths.ts"
            }
        ]
    },
    "ts-node": {
        "esm": true
    },
}